<!--extends layout-->

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        // register form
        form(method='POST' action='/register')
          div.form-group
            label(for='firstname') First Name:
            input#name.form-control(type='text', placeholder='First Name' name='firstname')
          div.form-group
            label(for='lastname') Last Name:
            input#favoriteBook.form-control(type='text', placeholder='Last Name' name='lastname')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          
          button.btn.btn-primary(type='submit') Sign up

